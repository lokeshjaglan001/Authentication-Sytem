<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-gray-800 flex flex-col items-center justify-center min-h-screen">
    <div class="flex flex-col text-white px-5 py-4 rounded-md w-95 gap-2 bg-gray-900 text-center m-4">
        <a href="/edit/<%=user._id%>" class="bg-blue-500 text-white rounded-md px-3 py-2 text-center">Edit Profile</a>
        <a href="/logout" class="bg-red-500 text-white rounded-md px-3 py-2 text-center">Logout</a>
        <a href="#" onclick="deleteUser('<%= user._id %>')" class="bg-red-600 text-white rounded-md px-3 py-2 text-center">Delete</a>
        Ram Ram <%= user.username %> ji üôè
    </div>
    <script>
    async function deleteUser(id) {
        if (!confirm("Are you sure you want to delete this user?")) return;

        const response = await fetch(`/delete/${id}`, {
            method: "DELETE"
        });

        if (response.ok) {
            alert("User deleted successfully!");
            window.location.href = "/login"; // Redirect after deletion
        } else {
            alert("Failed to delete user.");
        }
    }
    </script>
</body>
</html>